rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // project_updates: バックエンドがAdmin SDKで書き込み、フロントエンドが読み取り
    match /project_updates/{projectId} {
      // 認証済みユーザーは読み取り可能
      allow read: if request.auth != null;
      // 書き込みは拒否（Admin SDKはルールをバイパスする）
      allow write: if false;
    }

    // project_presence: フロントエンドがread/write（プレゼンス表示用）
    match /project_presence/{projectId}/users/{userId} {
      // 認証済みユーザーは読み取り可能
      allow read: if request.auth != null;
      // 自分のプレゼンスドキュメントのみ書き込み可能
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // その他のコレクションはデフォルトで拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
